<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
    <target name="file" xsi:type="File"
            layout="${longdate} | ${uppercase:${level}} | ${logger} | ${message} | ${exception:format=Message,Type,ShortType,ToString,Method,StackTrace:seperator=\n}"
            fileName="${basedir}/logs/HomeAssistant.Hub.log"
            archiveFileName="${basedir}/logs/HomeAssistant.Hub.{#}.txt"
            archiveEvery="Day"
            archiveNumbering="Sequence"
            maxArchiveFiles="28"
            concurrentWrites="true" />
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="file" />
  </rules>
</nlog>
